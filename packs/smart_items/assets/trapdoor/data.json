{
  "id": "4d34d651-8231-4a8f-82bd-d9d3b71505aa",
  "name": "Trapdoor",
  "category": "doors",
  "tags": [
    "door",
    "trap",
    "interactive"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/trap_door.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Open\" }"
        },
        {
          "name": "Close",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Closed\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"open\" }"
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"close\" }"
        },
        {
          "name": "Play Idle Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"main\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Open Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Close Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        },
        {
          "type": "on_spawn",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Idle Animation"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": [
        "Open",
        "Closed"
      ],
      "defaultValue": "Closed"
    },
    "core-schema::SyncComponents": { "value": ["core::Animator", "core::AudioSource", "asset-packs::States"] }
  }
}