{
  "id": "f7573b6c-f5d3-403c-ad74-2657adbe4a54",
  "name": "Vertical Hallway Door",
  "category": "structures",
  "tags": [
    "door",
    "vertical",
    "hallway",
    "interactive"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/vertical_hallway_door.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Open\" }"
        },
        {
          "name": "Close",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Closed\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"open\" }"
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"close\" }"
        },
        {
          "name": "Play Idle Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"main\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Open Animation"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Close Animation"
            }
          ]
        },
        {
          "type": "on_spawn",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Idle Animation"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": [
        "Open",
        "Closed"
      ],
      "defaultValue": "Closed"
    }
  }
}