{
  "id": "fefa3ea5-40f3-46c6-a240-9ce70db8f677",
  "name": "Hatch trapdoor",
  "category": "structures",
  "tags": ["door"],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/hatch_anim.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Open\" }"
        },
        {
          "name": "Close",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Closed\" }"
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"openHatch\" }"
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"closeHatch\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Open Animation"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Close Animation"
            }
          ]
        },
        {
          "type": "on_spawn",
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Close"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": [
        "Open",
        "Closed"
      ],
      "defaultValue": "Closed"
    }
  }
}
