{
  "id": "fefa3ea5-40f3-46c6-a240-9ce70db8f677",
  "name": "Hatch trapdoor",
  "category": "structures",
  "tags": ["door"],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/hatch_anim.glb"
    },
    "asset-packs::Actions": {
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "payload": {
            "setState": {
              "state": "Open"
            }
          }
        },
        {
          "name": "Close",
          "type": "set_state",
          "payload": {
            "setState": {
              "state": "Closed"
            }
          }
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "payload": {
            "playAnimation": {
              "animation": "openHatch"
            }
          }
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "payload": {
            "playAnimation": {
              "animation": "closeHatch"
            }
          }
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Play Open Animation"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Play Close Animation"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "value": ["Open", "Close"],
      "defaultValue": "Close"
    }
  }
}
