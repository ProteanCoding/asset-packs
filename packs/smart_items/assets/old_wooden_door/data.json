{
  "id": "ce058a68-1635-472c-b4b5-4bc9f4b4277f",
  "name": "Old Wooden Door",
  "category": "structures",
  "tags": [
    "door"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/door_pirates.glb"
    },
    "asset-packs::Actions": {
      "id": "{self}",
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Open\" }"
        },
        {
          "name": "Close",
          "type": "set_state",
          "jsonPayload": "{ \"state\": \"Closed\" }"
        },
        {
          "name": "Play Sound",
          "type": "play_sound",
          "jsonPayload": "{ \"src\": \"{assetPath}/sound.mp3\" }"
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"Open\" }"
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "jsonPayload": "{ \"animation\": \"Close\" }"
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Open Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "id": "{self:asset-packs::States}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Close Animation"
            },
            {
              "id": "{self:asset-packs::Actions}",
              "name": "Play Sound"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "id": "{self}",
      "value": [
        "Open",
        "Closed"
      ],
      "defaultValue": "Closed"
    }
  }
}