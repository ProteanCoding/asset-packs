{
  "id": "ea5b9544-2ddd-4eba-ba91-41f6cf0b34df",
  "name": "Stone Trapdoor",
  "category": "structures",
  "tags": [
    "door",
    "trap",
    "interactive"
  ],
  "components": {
    "core::GltfContainer": {
      "src": "{assetPath}/stone_trap_door.glb"
    },
    "asset-packs::Actions": {
      "value": [
        {
          "name": "Open",
          "type": "set_state",
          "payload": {
            "setState": {
              "state": "Open"
            }
          }
        },
        {
          "name": "Close",
          "type": "set_state",
          "payload": {
            "setState": {
              "state": "Closed"
            }
          }
        },
        {
          "name": "Play Open Animation",
          "type": "play_animation",
          "payload": {
            "playAnimation": {
              "animation": "open"
            }
          }
        },
        {
          "name": "Play Close Animation",
          "type": "play_animation",
          "payload": {
            "playAnimation": {
              "animation": "close"
            }
          }
        }
      ]
    },
    "asset-packs::Triggers": {
      "value": [
        {
          "type": "on_click",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Open"
            }
          ]
        },
        {
          "type": "on_click",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Close"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Open"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Play Open Animation"
            }
          ]
        },
        {
          "type": "on_state_change",
          "conditions": [
            {
              "entity": "{selfEntity}",
              "type": "when_state_is",
              "value": "Closed"
            }
          ],
          "actions": [
            {
              "entity": "{selfEntity}",
              "name": "Play Close Animation"
            }
          ]
        }
      ]
    },
    "asset-packs::States": {
      "value": [
        "Open",
        "Closed"
      ],
      "defaultValue": "Closed"
    }
  }
}